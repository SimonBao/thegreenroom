<div class='container col-12 background-image-tours-new'>
  <div class="container d-flex flex-column align-items-center justify-content-center py-5 form-container">
    <div>
      <h1 class='add-tour'>Add a Tour</h1>
    </div>
    <div>
      <%= simple_form_for @tour do |f| %>
        <%= f.input :name , class: 'form-control' %>
        <%= f.input :photo, as: :file, label: 'Upload a tour poster:' %>
        <%= f.button :submit , class: 'form-control btn-small create-tour-btn' %>
      <% end %>
    </div>
  </div>
</div>
