<div class='container col-6'>
  <div class="container d-flex flex-column align-items-center justify-content-center py-5 form-container">
    <div>
      <h1>Add a Tour</h1>
    </div>
    <div>
      <%= simple_form_for @tour do |f| %>
        <%= f.input :name , class: 'form-control' %>
        <%= f.input :start_date, html5: true, class: 'form-control' %>
        <%= f.input :end_date, html5: true, class: 'form-control' %>
        <%= f.button :submit , class: 'form-control' %>

      <% end %>
    </div>
  </div>
</div>
