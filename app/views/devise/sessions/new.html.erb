<div class='background-image vh-100'>
  <div class="container d-flex align-items-center justify-content-center py-5 form-container">
    <div>
        <h2>Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions d-flex justify-content-center">
            <%= f.button :submit, "Log in", class: 'btn btn-login btn-login__green d-flex justify-content-center' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
