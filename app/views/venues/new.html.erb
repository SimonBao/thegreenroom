<div class='background-image vh-100'>
  <div class="container d-flex align-items-center flex-column py-5 form-container">
    <h2>Add a venue</h2>
    <%= simple_form_for(@venue) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :name,
        required: true,
        autofocus: true,
        label: false,
        placeholder: 'Name',
        input_html: { class: 'devise_form_input'}%>
      <%= f.input :address,
        required: true,
        label: false,
        placeholder: 'Address',
        input_html: { class: 'devise_form_input'}%>
      <%= f.input :description,
        required: true,
        label: false,
        placeholder: 'Description',
        input_html: { class: 'devise_form_input'}%>
      <%= f.input :capacity,
        required: true,
        label: false,
        placeholder: 'Capacity',
        input_html: { class: 'devise_form_input'}%>

      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      <div class="calendar_container w-100 h-100" data-controller="calendar" data-calendar-available_dates="<%= @available_dates %>">
        <%= month_calendar do |day| %>
          <%= content_tag :div, class: "calendar-day", data: {date: day} do %>
              <%= link_to Date.parse(day.to_s).strftime("%d"),'',remote: true,:'data-date' => day, data: { controller: 'calendar',calendar_target: "date", action: 'click->calendar#append' } %>
          <% end %>
        <% end %>
          <%= f.input :available_dates, default: [], multiple: true, as: :hidden, html5: true %>
      </div>



    <div class="form-action">
      <%= f.button :submit, class: 'devise_form_submit' %>
    </div>
  <% end %>
  </div>
    </div>
</div>
